<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>



        <record id="reference_import_view" model="ir.ui.view">
            <field name="name">reference.import.form</field>
            <field name="model">reference.import</field>
            <field name="arch" type="xml">
                <form string="Reference Import">
                    <header>
                        <button name="validate_files" string="Valider le fichier" type="object" class="btn-primary" states="draft"/>

                        <button name="process_file" string="Charger les références" type="object" class="btn-primary" states="validate"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,validate,process"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name='file' filename="filename" widget='binary'/>
                                <field name='filename'  invisible='1' />
                            </group>
                            <group>
                                <field name='first_row_is_header'/>
                            </group>
                        </group>
                        <group>
                             <div>
                                <p>
                                    la structure de fichier doit être comme suit
                                    comme en-tête, le nom de la première colonne doit être 'reference' la deuxième colonne doit être 'designation' et la dernière colonne 'pvc'

                                </p>
                            </div>
                        </group>
                    </sheet>    
                </form>
            </field>
        </record>



        <record id="reference_import_tree" model="ir.ui.view">
            <field name="name">reference_import_tree</field>
            <field name="model">reference.import</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="filename"/>
                    <field name="first_row_is_header"/>
                </tree>
            </field>
        </record>

        <record id="action_reference_import_form" model="ir.actions.act_window">
            <field name="name">Importation références</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">reference.import</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem
                id="menu_reference_import"
                action="action_reference_import_form"
                parent="auto_parts.menu_reference"
                sequence="2"
                />

	</data>
</odoo>
	